name: linear-base
version: 0.1.0.0
homepage: https://github.com/tweag/linear-base#README
license: BSD3
license-file: LICENSE
author: Tweag I/O
maintainer: arnaud.spiwack@tweag.io
copyright: (c) 2017 EURL Tweag
category: Prelude
synopsis: Basic facilities for working with linear types.
description: Please see README.md.

build-type: Simple
extra-source-files: README.md
cabal-version: >=1.10

library
  hs-source-dirs: src
  exposed-modules:
    Foreign.Marshal.Pure
    Prelude.Linear
    System.IO.Linear
    System.IO.Resource
    Unsafe.Linear
  build-depends:
    base >= 4.7 && < 5,
    containers,
    ghc-prim,
    storable-tuple,
    text
  default-language:    Haskell2010

test-suite test
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Spec.hs
  build-depends:
    base,
    linear-base
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  default-language: Haskell2010

test-suite examples
  type: exitcode-stdio-1.0
  hs-source-dirs: examples
  main-is: Spec.hs
  other-modules:
    Foreign.List
    Foreign.Heap
  build-depends:
    base,
    hspec,
    linear-base,
    QuickCheck,
    storable-tuple
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  default-language: Haskell2010

source-repository head
  type: git
  location: https://github.com/tweag/linear-base
